<div class="container">
  <h4><%= t('.title') %></h4>
  <table>
    <thead>
    <tr>
      <th><%= ta(Patient, :name) %></th>
      <th><%= ta(Patient, :cellphone) %></th>
      <th><%= ta(Patient, :email) %></th>
      <th><%= ta(Patient, :zip_code) %></th>
      <th><%= ta(Patient, :address) %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.cellphone %></td>
        <td><%= patient.email %></td>
        <td><%= patient.zip_code %></td>
        <td><%= patient.address %></td>

        <td><%= link_to t('.show'), patient %></td>
        <td><%= link_to t('.edit'), edit_patient_path(patient) %></td>
        <td><%= link_to t('.destroy'), patient, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

