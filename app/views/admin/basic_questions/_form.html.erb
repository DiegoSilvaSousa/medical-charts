<%= simple_form_for([:admin, @basic_question]) do |f| %>
  <% if @basic_question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@basic_question.errors.count, 'error') %> prohibited this basic question from being saved:</h2>

      <ul>
        <% @basic_question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= f.input :description %>
  </div>
  <div class="input-field">
    <%= f.input :kind, collection: AnswerKind.to_a, input_html: { class: 'browser-default' } %>
  </div>
  <div class="input-field">
    <%= f.input :parent_id, collection: BasicQuestion.all, label: false %>
  </div>

  <div class="input-field">
    <%= f.submit %>
  </div>
<% end %>
